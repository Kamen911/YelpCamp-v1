<% include ../partials/header %>

<div class="container">

   <header class="jumbotron">
      <h1>Welcome to YelpCamp</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <p>
         <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
      </p>
   </header>

   <div class="row text-center">

      <% campgrounds.forEach((campground) => { %>
         <div class="col-lg-3 col-sm-6" style="padding-bottom: 30px;">
            <div class="img-thumbnail">
                  <img style="border: none" class="img-thumbnail" src="<%= campground.image %>">
                  <div class="caption">
                        <h4> <%= campground.name %> </h4>
                  </div>
                  <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
            </div> <!-- end .img-thumbnail -->
         </div>
      <% }); %>

   </div> <!-- end .row -->

</div> <!--End .container-->



<% include ../partials/footer %>