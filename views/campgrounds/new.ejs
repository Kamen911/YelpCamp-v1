<% include ../partials/header %>

<div class="container">
      <div class="row">

         <h1 style="width: 100%; text-align: center;">Create a new CampGround!</h1>
         <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
               <div class="form-group">
                  <input type="text" class="form-control"  name="name" placeholder="Name of the campground">
               </div>
               <div class="form-group">
                  <input type="text" class="form-control"  name="image" placeholder="URL of the image">
               </div>
               <div class="form-group">
                     <input type="text" class="form-control" name="description" placeholder="Short description">
               </div>
               <div class="form-group">
                  <button class="btn btn-primary btn-block">Submit!</button>
               </div>
            </form>
            <a href="/campgrounds">Go Back!</a>
         </div>


      </div> <!--end .row-->
   </div> <!--end .container-->


<% include ../partials/footer %>