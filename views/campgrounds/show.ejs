<% include ../partials/header %>

<div class="container">
   <div class="row">
      <div class="col-md-3">
         <p class="lead">YelpCamp</p>
         <div class="list-group">
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 1</li>
            <li class="list-group-item">Info 1</li>
         </div>
         <a class="btn btn-info" href="/campgrounds">Go back!</a>
      </div> <!-- end col-md-3 -->
      <div class="col-md-9">
         <div class="img-thumbnail">
            <img class="img-fluid" src="<%= campground.image %>" >
            <div class="caption-full">
               <h4 class="float-right">$9.00/night</h4>
               <h4> <a href="/"> <%= campground.name %> </a> </h4>
               <p> <%= campground.description %> </p>
               <p>
                  <em> Subitted by: <strong> <%= campground.author.username %> </strong> </em>
               </p>
               <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-sm btn-warning">Edit Post</a>
               <form id="delete-form" action="/campgrounds/<%= campground._id %>/?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-sm btn-danger">Delete!</button>
               </form>
            </div>
         </div> <!-- end .img-thumbnail -->
         <div class="card">
            <div class="text-right">
               <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add new comment</a>
            </div>
            <hr>
            <% campground.comments.forEach((comment) => { %>
               <div class="row">
                  <div class="col-md-12">
                     <strong> <%= comment.author.username %> </strong>
                     <span class="float-right">10 days ago</span>
                     <p>
                        <%= comment.text %>
                     </p>
                  </div>
               </div>
            <% }); %>
         </div> <!-- end .well-->
      </div> <!-- end .col-md-9 - -->
   </div> <!-- end .row -->
</div> <!-- end .container -->

<% include ../partials/footer %>

<link rel="stylesheet" href="style.css">